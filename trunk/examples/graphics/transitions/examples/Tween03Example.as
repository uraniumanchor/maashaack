asings.Back;    import graphics.transitions.easings.Bounce;    import flash.display.Shape;    import flash.display.Sprite;    import flash.events.KeyboardEvent;    public class Tween03Example extends Sprite    {        public function Tween03Example()        {            /// build and draw the shape                        shape    = new Shape() ;                        shape.x  = 50 ;            shape.y  = 50 ;                        addChild( shape ) ;                        var pen:Pen = new RectanglePen( shape ) ;                        pen.fill    = new FillStyle(0xFFFFFF) ;            pen.line    = new LineStyle(1,0x999999) ;                        pen.draw(0,0,32,32,Align.CENTER) ;                        var buffer:TweenBuffer = new TweenBuffer() ;                        buffer.add( new TweenEntry( "x", Bounce.easeOut , shape.x , 550 ) ) ;            buffer.add( new TweenEntry( "y", Back.easeOut   , shape.y , 300 ) ) ;                        tween = new Tween(shape) ;                        tween.buffer     = buffer ;            tween.duration   = 4 ;            tween.useSeconds = true ;                        tween.start() ;                        trace ("press a key to test the tween buffer") ;                        stage.addEventListener( KeyboardEvent.KEY_DOWN , keyDown ) ;        }                public var shape:Shape ;                public var tween:Tween ;                public function keyDown( e:KeyboardEvent ):void         {            tween.buffer =             [                new TweenEntry("x", Bounce.easeOut, shape.x, 40) ,                new TweenEntry("y", Bounce.easeOut, shape.y, 25) ,                new TweenEntry("rotation", Bounce.easeOut, shape.rotation, 210)            ] ;            if ( !tween.running )             {                tween.start() ;            }         }    }}