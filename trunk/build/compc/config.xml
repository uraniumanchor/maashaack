<?xml version="1.0" encoding="utf-8"?>

<flex-config>
    <compiler>
        <source-path>
            <path-element>../../src/</path-element>
        </source-path>
        
        <namespaces>
            <namespace>
                <uri>http://code.google.com/p/core/2010</uri>
                <manifest>../compc_core/manifests/core_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/system/2010</uri>
                <manifest>./manifests/system_manifest.xml</manifest>
            </namespace>
            <namespace>
                <uri>http://code.google.com/p/graphics/2010</uri>
                <manifest>./manifests/graphics_manifest.xml</manifest>
            </namespace>
        </namespaces>
        
        <strict>true</strict>
        <optimize>true</optimize>
        
       <define append="true"> 
           <name>CONFIG::release</name>
           <value>true</value> 
       </define> 
       <define append="true"> 
           <name>CONFIG::debugging</name> 
           <value>false</value> 
       </define>
       <define append="true"> 
           <name>API::FLASH</name> 
           <value>true</value> 
       </define>
       <define append="true"> 
           <name>API::REDTAMARIN</name> 
           <value>false</value> 
       </define>
       
    </compiler>
    
    <include-namespaces>
        <uri>http://code.google.com/p/core/2010</uri>
        <uri>http://code.google.com/p/system/2010</uri>
        <uri>http://code.google.com/p/graphics/2010</uri>
    </include-namespaces>
    
    <target-player>10.2</target-player>
    
    <directory>false</directory>
    
    <output>../../libs/maashaack.swc</output>
    
    <metadata>
        <title>The AS3 Maashaack framework library</title>
        <description>All class of Maashaack AS3 (core/system/graphics)</description>
        <publisher>http://code.google.com/p/maashaack</publisher>
        <creator>Marc ALCARAZ (aka eKameleon)</creator>
        <language>EN</language>
    </metadata>

</flex-config>
