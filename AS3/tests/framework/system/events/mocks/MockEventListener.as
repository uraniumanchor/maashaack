package system.events.mocks {    import system.events.EventListener;
    
    import flash.events.Event;    

    /**     * This mock listen and handle events.     */    public class MockEventListener implements EventListener     {             /**         * Creates a new MockEventListener instance.         * @param dispatcher The IEventDispatcher reference of this listener.         */           public function MockEventListener()        {        	//        }                /**         * The internal counter of the listener.         */        public var count:uint ;                /**         * The event receive in the handleEvent method.         */        public var event:Event ;                /**         * Handles the event.         */        public function handleEvent(e:Event):void        {        	// trace( "# " + this + " : " + e ) ;        	event = e ;        	count ++ ;        }        }}